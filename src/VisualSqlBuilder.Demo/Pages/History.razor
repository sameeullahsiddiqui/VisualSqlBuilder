@page "/history"
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Query History</PageTitle>

<div class="container-fluid">
    <h3>Query History</h3>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Timestamp</th>
                                    <th>Query</th>
                                    <th>Duration</th>
                                    <th>Rows</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var query in _queryHistory)
                                {
                                    <tr>
                                        <td>@query.Timestamp.ToString("g")</td>
                                        <td>
                                            <code class="text-truncate d-inline-block" style="max-width: 400px;">
                                                @query.SqlQuery
                                            </code>
                                        </td>
                                        <td>@query.Duration ms</td>
                                        <td>@query.RowCount</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" @onclick="() => RerunQuery(query)">
                                                Rerun
                                            </button>
                                            <button class="btn btn-sm btn-info" @onclick="() => EditQuery(query)">
                                                Edit
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

