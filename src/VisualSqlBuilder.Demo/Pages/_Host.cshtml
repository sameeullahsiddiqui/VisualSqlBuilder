@page "/"
@namespace VisualSqlBuilder.Demo.Pages

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <base href="~/" />
    <meta charset="utf-8" />
    <title>Visual SQL Builder</title>
    
@*     <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
 *@    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
        
    <!-- Component CSS -->
    <link rel="stylesheet" href="_content/VisualSqlBuilder.Core/visual-sql-builder.css" />
    
    <link href="VisualSqlBuilder.Demo.styles.css" rel="stylesheet" />

</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />
    
    <script>
        // Add error handling for SignalR connection
        window.addEventListener('error', function (event) {
            console.error('Global error:', event.error);
        });

        // Monitor Blazor connection
        if (window.Blazor) {
            Blazor.start().then(() => {
                console.log('Blazor started successfully');
            }).catch(err => {
                console.error('Blazor start error:', err);
            });
        }
    </script>

    <!-- Bootstrap 5 JS (after Blazor) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Component JS (after Blazor) -->
    @* <script src="_content/VisualSqlBuilder.Core/visual-sql-builder.js"></script> *@

    <!-- Blazor SignalR -->
    <script src="_framework/blazor.server.js"></script>

</body>
</html>