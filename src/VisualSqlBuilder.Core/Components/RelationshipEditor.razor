<div class="relationship-editor">
    <div class="modal fade" id="relationshipModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Relationship</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @if (Relationship != null)
                    {
                        <div class="mb-3">
                            <label class="form-label">Join Type:</label>
                            <select class="form-select" @bind="Relationship.JoinType">
                                <option value="@JoinType.InnerJoin">INNER JOIN</option>
                                <option value="@JoinType.LeftJoin">LEFT JOIN</option>
                                <option value="@JoinType.RightJoin">RIGHT JOIN</option>
                                <option value="@JoinType.FullOuterJoin">FULL OUTER JOIN</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Relationship Type:</label>
                            <select class="form-select" @bind="Relationship.Type">
                                <option value="@RelationshipType.Primary">Primary (Red)</option>
                                <option value="@RelationshipType.Secondary">Secondary (Blue)</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Cardinality:</label>
                            <select class="form-select" @bind="Relationship.Cardinality">
                                <option value="1:1">One to One (1:1)</option>
                                <option value="1:N">One to Many (1:N)</option>
                                <option value="N:1">Many to One (N:1)</option>
                                <option value="N:N">Many to Many (N:N)</option>
                            </select>
                        </div>

                        <div class="alert alert-info">
                            <strong>Source:</strong> @SourceInfo<br />
                            <strong>Target:</strong> @TargetInfo
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" @onclick="DeleteRelationship">Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveRelationship">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public RelationshipModel? Relationship { get; set; }
    [Parameter] public string SourceInfo { get; set; } = string.Empty;
    [Parameter] public string TargetInfo { get; set; } = string.Empty;
    [Parameter] public EventCallback<RelationshipModel> OnSave { get; set; }
    [Parameter] public EventCallback<RelationshipModel> OnDelete { get; set; }

    private async Task SaveRelationship()
    {
        if (Relationship != null)
        {
            await OnSave.InvokeAsync(Relationship);
        }
    }

    private async Task DeleteRelationship()
    {
        if (Relationship != null)
        {
            await OnDelete.InvokeAsync(Relationship);
        }
    }
}